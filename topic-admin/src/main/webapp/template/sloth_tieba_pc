1、发表贴吧（创建一级目录
[POST]http://localhost:8083/app/tieba_app/folder/{folderPath}/article
[PARAMS]
ticket:用户票据，用于用户权限验证
article:{
	title:标题
	brief:简介
	tags:[
		{
			name:标签名
		}
	]
	content:{
		size:段落数量
		sections:[
			{
				type:段落类型(text/image/audio/vidio)
				attr:{
					排版样式
				}
				data:{
					段落内容
				}
			}
		]
	}
}
[RESPONSE]
{
	code:200
	article:{
		id:话题ID
		title:标题
		brief:简介
		tags:[
			{
				name:标签名
			}
		]
		content:{
			size:段落数量
			sections:[
				{
					type:段落类型(text/image/audio/vidio)
					attr:{
						排版样式
					}
					data:{
						段落内容
					}
				}
			]
		}
		creator:{
			uid:用户ID
			nick:昵称
			avatar:头像
		}
		utime:更新时间
		ctime:创建时间
	}
}